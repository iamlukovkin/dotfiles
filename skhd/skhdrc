rcmd - return : /usr/local/bin/kitty -d ~

alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

alt + shift - h : yabai -m window --swap west
alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - l : yabai -m window --swap east

shift + cmd - h : yabai -m window --warp west; yabai -m window --toggle split
shift + cmd - j : yabai -m window --warp south; yabai -m window --toggle split
shift + cmd - k : yabai -m window --warp north; yabai -m window --toggle split
shift + cmd - l : yabai -m window --warp east; yabai -m window --toggle split

shift + rcmd - f : yabai -m window --toggle float --grid 4:4:1:1:2:2
shift + rcmd - m : yabai -m window --toggle zoom-fullscreen
shift + rcmd - b : yabai -m space --balance

shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;

# System shortcuts
rcmd + shift - d : osascript -e 'tell application "System Events" to tell appearance preferences to set dark mode to not dark mode'

